<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.outerspace.navigationstew.MainActivity"
    >

    <data>
        <variable
            name="fragG_VM"
            type="com.outerspace.navigationstew.viewmodel.FragmentGViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/simple_border"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/intro"
            android:text="@string/g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="200sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="8dp"
            />

        <Button
            android:id="@+id/btn_h"
            android:text="@string/btn_h"
            android:tag="H"
            android:onClick="onClickNavigationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/btn_b"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_b"
            android:text="@string/btn_b"
            android:tag="B"
            android:onClick="onClickNavigationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="32dp"/>

    </android.support.constraint.ConstraintLayout>

</layout>
